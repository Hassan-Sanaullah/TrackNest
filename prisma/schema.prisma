generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  createdAt DateTime @default(now())

  websites Website[]
}

model Website {
  id        String   @id @default(uuid())
  name      String
  domain    String
  createdAt DateTime @default(now())

  user   User   @relation(fields: [userId], references: [id])
  userId String

  events    Event[]
  sessions  Session[]
  summaries EventSummary[]
}

model Event {
  id        String   @id @default(uuid())
  eventType String
  url       String
  referrer  String?
  userAgent String?
  ip        String?
  timestamp DateTime @default(now())
  sessionId String

  website   Website @relation(fields: [websiteId], references: [id])
  websiteId String
}

model Session {
  id         String    @id @default(uuid())
  sessionId  String
  ip         String?
  userAgent  String?
  createdAt  DateTime  @default(now())

  website    Website   @relation(fields: [websiteId], references: [id])
  websiteId  String
}

model EventSummary {
  id              String   @id @default(uuid())
  date            DateTime
  pageViews       Int
  uniqueSessions  Int

  website         Website  @relation(fields: [websiteId], references: [id])
  websiteId       String
}
